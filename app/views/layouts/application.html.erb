<!DOCTYPE html>
<html>
  <head>
    <title>Panazon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="nav-container">
      <nav>
        <ul class="nav">

      <% if logged_in? %>
        <li class="nav-li-link"><%= link_to "Log out", session_path(current_user), method: :delete %></li>
        <li class="nav-li-link"><%= link_to "Profile", user_path(current_user) %></li>
      <% else %>
        <li class="nav-li-link"><%= link_to "Log In", new_session_path %></li>
        <li class="nav-li-link"><%= link_to "Register", new_user_path %></li>
      <% end %>
        <li class="nav-li-link"><a href="/">Home</a></li>
        <form>
          <input type="text" placeholder="Search..." required>
          <input type="button" value="Search">
        </form>
      </ul>

        <div class="container">
          <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>

      </nav>
    </div>
    <%= yield %>
  </body>
</html>
